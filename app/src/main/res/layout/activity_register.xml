<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/r_img_1"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:src="@drawable/cc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/r_img_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsextra"
        android:text="Welcome Student"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/r_txt_1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/r_txt_1"
        android:padding="15dp"
        android:id="@+id/tly1"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Full Name"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/blue"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppinsregular"
            android:id="@+id/r_gbt_name"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Email"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/blue"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="20dp"
            android:id="@+id/r_gbt_email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Password"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/blue"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="20dp"
            android:id="@+id/r_psw_email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/blue"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="20dp"
            android:id="@+id/r_cpw_email"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/tly1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="150dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:id="@+id/r_btn_ter"
        android:fontFamily="@font/poppinsbold"
        />

    <Button
        android:id="@+id/re_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/r_btn_ter"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape3"
        android:fontFamily="@font/poppinsextra"
        android:text="Back"
        android:textColor="@color/bluedark"
        android:textSize="23sp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>