<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/home_img"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:src="@drawable/cc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/home_img"
        android:background="@drawable/button_shape2"
        android:text="Jobsheet"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/btn_job"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_job"
        android:background="@drawable/button_shape2"
        android:text="Referensi"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_ref"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_ref"
        android:background="@drawable/button_shape2"
        android:text="Profil"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_profil"/>

    <Button
        android:id="@+id/btnh_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_profil"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_shape3"
        android:fontFamily="@font/dosis_bold"
        android:text="Logout"
        android:textColor="@color/bluedark"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>